@model LoginVm

@{
    ViewBag.Title = "Jira";
    Layout = "_Layout2";
}

<div class="container">
    <div class="row row-cols-1 mt-5">
        <div class="col col-8 mx-auto">
            <div class="row row-cols-2">
                <div class="col col-6 mx-auto text-center">
                    <div class="row">
                        <div class="col col-12 bg-white border border-1 py-4 px-5">
                            <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true" id="loginForm">
                                <div class="input-group mt-5">
                                    <div class="validation text-danger" asp-validation-summary="ModelOnly" id="errors"></div>
                                    <label for="email"><span class="text-danger" asp-validation-for="Login"></span></label>
                                    <div class="input-group">
                                        <input asp-for="Login" type="text" class="form-control" placeholder="Email or username" id="email">
                                    </div>
                                </div>
                                <div class="input-group mt-4">
                                    <label for="pass"><span class="text-danger" asp-validation-for="Password"></span></label>
                                    <div class="input-group">
                                        <input asp-for="Password" type="password" class="form-control" placeholder="Password" id="pass">
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary rounded-2 w-100 mt-5">Login</button>
                            </form>
                        </div>
                        <div class="col col-12 bg-white text-center border border-1 mt-4 py-4">
                            <a class="link link-info link-underline link-underline-opacity-0" asp-action="Register">Sign In</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    
}
