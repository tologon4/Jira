@model ICollection<Jira.Application.Projects.Queries.GetProjectList.ProjectLookupDto>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="row row-cols-2 mb-5">
    <div class="col"><h5>Projects</h5></div>
    <div class="col text-end">
        <a class="btn btn-primary text-white ms-auto me-3" asp-controller="Project" asp-action="Create">Create a Project</a>
    </div>
</div>

@if (Model != null || Model.Count > 0)
{
    <table class="table bg-white">
        <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Key</th>
            <th scope="col">Type</th>
            <th scope="col">P.Manager</th>
            <th scope="col">Customer Company</th>
            <th scope="col">Priority</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var project in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Project" asp-action="Details" class="" asp-route-projectId="@project.Id">
                        <img src="@project.AvatarUrl" class="rounded rounded-1" height="25" width="25"/>
                        &nbsp; @project.ProjectName
                    </a>
                </td>
                <td>@project.KeyName</td>
                <td>@project.ProjectType</td>
                <td>@project.ProjectManagerName</td>
                <td>@project.CompanyCustomerName</td>
                <td>@project.Priority</td>
            </tr>
        }
        </tbody>
    </table>
}
